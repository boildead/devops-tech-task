scrape_configs:
  - job_name: node
    scrape_interval: 5s
    static_configs:
    - targets: ['node-exporter:9100']
  - job_name: cadvisor
    scrape_interval: 10s 
    metrics_path: '/metrics'
    static_configs:
      - targets: ['cadvisor:8080']
  - job_name: docker
    metrics_path: '/metrics'
    scrape_interval: 10s 
    static_configs:
      - targets: ['{{ gateway_ip }}:9323']
rule_files:
  - 'node_rules.yml'
  - 'node_alerts.yml'
alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets: [ 'alertmanager:9093' ]